<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://schoolListView.title"
      focusComponent="schoolsDataGrid">
    <data>
        <collection id="schoolsDc"
                    class="com.company.jmixcrud.entity.School">
            <fetchPlan extends="_base"/>
            <loader id="schoolsDl" readOnly="true">
                <query>
                    <![CDATA[select e from School e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <div classNames="panel-container" width="100%">

            <textField id="nameField" property="name" width="100%"
                       label="Name"/>

            <hbox justifyContent="END" classNames="panel-footer" width="100%">
                <button id="schoolsDataGridRefreshBtn" action="schoolsDataGrid.refresh"
                        themeNames="primary"
                        text="search"
                        title="search" icon="lumo:search"/>
            </hbox>
        </div>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="schoolsDataGrid.create"/>
            <button id="editButton" action="schoolsDataGrid.edit"/>
            <button id="removeButton" action="schoolsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="schoolsDl"/>
        </hbox>
        <dataGrid id="schoolsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="schoolsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
                <action id="refresh" type="list_refresh"/>

            </actions>
            <columns resizable="true">
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
